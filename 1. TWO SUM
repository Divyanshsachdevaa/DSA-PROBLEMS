//TIME COMPLEXITY: O(n)
//SPACE COMPLEXITY: O(1)

class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target) {
        vector<int> ans;
        int s = 0,e= nums.size()-1;
        while(s < nums.size()){
            if(nums[s] + nums[e] == target && s != e){
                ans.push_back(s);
                ans.push_back(e);
                break;
            }
            else if(s==e){
                s++;
                e=nums.size()-1;
            }
            else{
                e--;
            }
        }
        return ans;
    }
};
